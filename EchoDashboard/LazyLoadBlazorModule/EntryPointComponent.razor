@page "/lazyload"
@inherits EntryPointComponentDataModel

@using Models

<PageTitle>Items</PageTitle>

<h1>Items</h1>

<p>This component demonstrates fetching data from the mocked server.</p>

<button class="btn btn-primary" @onclick="RetrieveItemsAsync">Retrieve Items</button>

@if (State!.IsLoading)
{
    <p><em>Loading...</em></p>
}
else
{
<table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Items)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.TemperatureC</td>
                    <td>@item.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}